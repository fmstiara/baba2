<!DOCTYPE html>
<html>
  <head>
    <title>Baba2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "animate.css" %>
    <link href="https://fonts.googleapis.com/css?family=M+PLUS+Rounded+1c" rel="stylesheet">
  </head>

  <body>
    <% if user_signed_in? %>
      <header>
        <div class="header_left header_item">
          <span class="header_logo">ばばぬき</span>
        </div>
        <div class="header_center header_item">
          <%= form_with model: @room do |form| %>
            <%= form.text_field :name %>
            <%= submit_tag "作成" %>
          <% end %>
        </div>
      </header>
    <% end %>
